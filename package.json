{
  "scripts": {
    "clean": "npx hardhat clean",
    "chain": "npx hardhat node",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy:bsctest": "npx hardhat run --network bsctestnet scripts/deploy.ts",
    "deploy:bscmain": "npx hardhat run --network bscmainnet scripts/deploy.ts",
    "upgrade:bsctest": "npx hardhat run --network bsctestnet scripts/upgrade.ts",
    "upgrade:bscmain": "npx hardhat run --network bscmainnet scripts/upgrade.ts",
    "test": "npx hardhat test",
    "sol:prettier": "npx prettier --write ./contracts -l",
    "sol:linter": "npx solhint -f table ./contracts/**/*.sol -f table ./contracts/*.sol",
    "ts:prettier": "npx prettier --write ./test/*.ts && npx prettier --write ./scripts/*.ts --write ./hardhat.config.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.50",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.5",
    "hardhat": "^2.9.3",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0"
  }
}
